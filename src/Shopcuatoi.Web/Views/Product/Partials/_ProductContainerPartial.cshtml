@model Shopcuatoi.Web.ViewModels.Catalog.ProductListItem

@{
    var product = Model;
}

<div class="col-sm-6 col-md-3">
    <div class="thumbnail">
        <a href="~/@product.SeoTitle">
            <img alt="@product.Name" src="@product.ThumbnailUrl">
            <div class="caption">
                <h3>@product.Name</h3>
                <p>$@product.Price</p>
                <p>
                    @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { productId = @product.Id }, new { @class = "btn btn-primary", role = "button" })
                    <a href="#" class="btn btn-default" role="button">Button</a>
                </p>
            </div>
        </a>
    </div>
</div>